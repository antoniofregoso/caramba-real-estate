     <!-- Real Estate Development -->
     
             <record id="real_estate_develpment_view_form" model="ir.ui.view">
            <field name="name">real_estate.development.form</field>
            <field name="model">real_estate.development</field>
            <field name="arch" type="xml">
                <form > 
                	<header>
                		 <field name="state" widget="statusbar"
                            options="{'clickable': '1', 'fold_field': 'fold'}" />
                	</header>
                	<sheet>
                		<div class="oe_button_box" name="button_box" groups="base.group_user">  
                			<field name="is_published" widget="website_redirect_button" /> 
                		</div>
                		<div class="oe_title">
                			<h1><field name="name" placeholder="Name"/></h1>
                			<h3><field name="summary" placeholder="Sumary"/></h3>
                		</div>
                			<group>
                				<group>
                					<field name="street"/>
                					<field name="street2"/>
                					<field name="city"/>
                					<field name="state_id"/>
                					<field name="country_id"/>
                					<field name="zip"/>
                					<field name="website_id"/>
                				</group>
                				<group>
                					<field name="priority" widget="priority"/>
                					<field name="development_type"/>
                					<field name="offer"/>
                					<field name="amenities_ids" widget="many2many_tags"
                       options="{'color_field': 'color', 'no_create_edit': True}"/>
                					<field name="services_ids" widget="many2many_tags"
                       options="{'color_field': 'color', 'no_create_edit': True}"/>
                       				<field name="delivery_date"/>
                					<field name="immediate_delivery"/>
                					<field name="user_id"/>
                				</group>
                                <group>
                                    <button
                                        string="Geolocate"
                                        name="geo_localize"
                                        colspan="2"
                                        icon="fa-check"
                                        type="object"/>
                                    <field name="date_localization"/>
                					<field name="latitude"/>
                					<field name="longitude"/>
                                    <field name="zoom"/>
                                </group>
                			</group>
                		 <notebook>
                		 	<page string="Units"  autofocus="autofocus" name="units">
                		 		<field name="units_ids" mode="kanban" context="{'default_development_id': active_id, 'default_user_id': user_id, 'default_type': 'product', 'default_sale_mode':'many'}">
                		 			<kanban>    
                		 				<field name="id"/>                  		 				
                                    	<field name="color"/>          		 				
                                    	<field name="name"/>
                                    	<field name="type"/>
                                    	<templates>
                                        	<t t-name="kanban-box">
                                        		<t t-set="color" t-value="kanban_color(record.color.raw_value)"/>
                                        		 <div t-att-class="color + (record.color.raw_value == 1 ? ' oe_kanban_color_alert' : '') + ' oe_kanban_global_click'">
	                                        		<div class="oe_kanban_details">
	                                        			<strong class="o_kanban_record_title"><field name="name"/></strong><br />
	                                        			<field name="real_estate_type_id"/>
	                                        		</div>
	                                        	</div>
                                        	</t>
                                        </templates>
                		 			</kanban>
                            	</field>
                		 	</page>
                		 	<page name="seo" string="SEO" groups="base.group_no_one">
                                <group name="default_opengraph">
                                    <field name="website_meta_title" string="Meta Title"/>
                                    <field name="website_meta_description" string="Meta Description"/>
                                    <field name="website_meta_keywords" string="Meta Keywords" help="Separate every keyword with a comma"/>
                                </group>
                            </page>
                		 </notebook>
                	</sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread" options="{'post_refresh': 'recipients'}"/>
                    </div>
                </form>
             </field>
        </record>
        
                <record model="ir.ui.view" id="real_estate_develpment_view_tree">
            <field name="name">real_estate.development.tree</field>
            <field name="model">real_estate.development</field>
            <field name="arch" type="xml">
                <tree string="Real Estate Development" decoration-bf="message_needaction==True" decoration-danger="state=='stopped'" decoration-muted="state=='cancel'">
                    <field name="name"/>                    
                    <field name="state"/>
                	<field name="user_id"/>
                	<field name="website_id"/>
                	 <field name="message_needaction" invisible="1"/>
                </tree>
             </field>
        </record>
        
          <record id="real_estate_develpment_view_kanban" model="ir.ui.view">
            <field name="name">real_estate.development.kanban</field>
            <field name="model">real_estate.development</field>
            <field name="priority" eval="1"/>
            <field name="arch" type="xml">
            	<kanban default_group_by="state" class="o_kanban_small_column">    
            		 <field name="color"/>     		
                    <field name="name"/>
                    <field name="development_type"/>
                     <field name="priority"/>
                    <field name="state"/>
                    <field name="real_estate_sequence"/>
                    <field name="country_id"/>
                    <field name="message_needaction_counter"/>
                    <field name="user_id"/>
                     <progressbar field="activity_state" colors='{"planned": "success", "today": "warning", "overdue": "danger"}'/>
					<templates>
						<t t-name="kanban-box">
							<div t-attf-class="#{!selection_mode ? kanban_color(record.color.raw_value) : ''} oe_kanban_global_click">
								<div class="o_dropdown_kanban dropdown">

                                    <a class="dropdown-toggle o-no-caret btn" role="button" data-toggle="dropdown" data-display="static" href="#" aria-label="Dropdown menu" title="Dropdown menu">
                                        <span class="fa fa-ellipsis-v"/>
                                    </a>
                                    <div class="dropdown-menu" role="menu">
                                        <t t-if="widget.editable"><a role="menuitem" type="edit" class="dropdown-item">Edit</a></t>
                                        <t t-if="widget.deletable"><a role="menuitem" type="delete" class="dropdown-item">Delete</a></t>
                                        <ul class="oe_kanban_colorpicker" data-field="color"/>
                                    </div>
                                </div>
								<div t-attf-class="oe_kanban_content oe_kanban_global_click">
									<div>
	                                    <strong class="o_kanban_record_title"><span><field name="name"/></span></strong><br />
	                                    <span><field name="development_type"/></span>
	                                </div>
									<div class="o_kanban_record_bottom">
	                                    <div class="oe_kanban_bottom_left">
	                                    	<field name="priority" widget="priority" groups="base.group_user"/>
	                                    	<t t-if="record.message_needaction_counter.raw_value">
	                                            <span role="alert" class="oe_kanban_mail_new" title="Unread Messages"><i class="fa fa-comments" aria-label="Messages" role="img"/><t t-raw="record.message_needaction_counter.raw_value"/></span>
	                                        </t>
	                                        <div class="o_kanban_inline_block">
	                                            <field name="activity_ids" widget="kanban_activity"/>
	                                        </div>
	                                    </div>
	                                    <div class="oe_kanban_bottom_right">
	                                        <img t-att-src="kanban_image('res.users', 'image_128', record.user_id.raw_value)" t-att-title="record.user_id.value" t-att-alt="record.user_id.value" class="oe_kanban_avatar float-right"/>
	                                    </div>
									</div>
								</div>
								<div class="oe_clear"/>
							</div>
						</t>
                    </templates>          	
            	</kanban>
            </field>
        </record>
            	
            	
     
   
     <record id="action_real_estate_develpment_view_form" model="ir.actions.act_window">
        <field name="name">Developments</field>
        <field name="res_model">real_estate.development</field>
        <field name="view_mode">kanban,tree,form</field>
    </record>
   
    	<menuitem id="real_estate_develpment_menu"
            name="Developments"
            parent="real_estate_menu_estates"
            action="action_real_estate_develpment_view_form"
            sequence="1"/> 

