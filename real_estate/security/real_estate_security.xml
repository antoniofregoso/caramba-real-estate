<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE xml>
<odoo noupdate="0">

<record model="ir.module.category" id="base.module_real_estate">
 <field name="name">Real Estate</field>
  <field name="description">User access level Real Estate</field>
  <field name="sequence">15</field>
</record>

    <!--Group forreal estate user -->
    <record id="group_real_estate_user" model="res.groups">
        <field name="name">User</field>
        <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
         <field name="category_id" ref="base.module_real_estate"/>
    </record>

    <!--Group for real estate manager -->
    <record id="group_real_estate_manager" model="res.groups">
        <field name="name">Administrator</field>
        <field eval="[(4, ref('real_estate.group_real_estate_user'))]" name="implied_ids" />
        <field name="users" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"/>
         <field name="category_id" ref="base.module_real_estate"/>
    </record>
    
    <record id="real_estate_development_public" model="ir.rule">
        <field name="name">Real Estate Develop: Public</field>
        <field name="model_id" ref="real_estate.model_real_estate_development"/>
        <field name="domain_force">[('website_published', '=', True)]</field>
        <field name="groups" eval="[(4, ref('base.group_public')), (4, ref('base.group_portal'))]"/>
        <field name="perm_read" eval="True"/>
        <field name="perm_write" eval="False"/>
        <field name="perm_create" eval="False"/>
        <field name="perm_unlink" eval="False"/>
    </record>

    <record id="real_estate.group_real_estate_manager" model="res.groups">
        <field name="implied_ids" eval="[(4, ref('website.group_website_publisher'))]"/>
    </record>


</odoo>